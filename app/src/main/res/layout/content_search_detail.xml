<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.doxa360.yg.android.wallpaper.SearchDetailActivity"
    tools:showIn="@layout/activity_search_detail" android:layout_gravity="center">


    <android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="4dp"
        app:cardElevation="4dp"
        android:layout_margin="@dimen/activity_vertical_margin"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="match_parent"
                      android:orientation="vertical"
                      android:gravity="center"
                      android:padding="8dp">

            <com.doxa360.yg.android.wallpaper.helpers.MLRoundedImageView
                android:id="@+id/imageView"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:scaleType="centerCrop"
                android:src="@drawable/wil_profile"/>


            <TextView android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:text="NAME"
                      android:alpha="0.8"
                      android:fontFamily="@font/ubuntu_medium"
                      android:textAppearance="@style/TextAppearance.AppCompat.Small"/>

            <TextView android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:id="@+id/name"
                      android:text="Akinola Johnson"
                      android:alpha="0.8"
                      android:fontFamily="@font/ubuntu_medium"
                      android:padding="8dp"
                      android:textAppearance="@style/TextAppearance.AppCompat.Large"/>

            <TextView android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:text="SEX"
                      android:alpha="0.8"
                      android:fontFamily="@font/ubuntu_medium"
                      android:textAppearance="@style/TextAppearance.AppCompat.Small"/>

            <TextView android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:id="@+id/sex"
                      android:text="Male"
                      android:alpha="0.8"
                      android:fontFamily="@font/ubuntu_medium"
                      android:padding="8dp"
                      android:textAppearance="@style/TextAppearance.AppCompat.Large"/>


            <TextView android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:text="DATE OF BIRTH"
                      android:alpha="0.8"
                      android:fontFamily="@font/ubuntu_medium"
                      android:textAppearance="@style/TextAppearance.AppCompat.Small"/>

            <TextView android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:id="@+id/dob"
                      android:text="20 Jan, 1980"
                      android:alpha="0.8"
                      android:fontFamily="@font/ubuntu_medium"
                      android:padding="8dp"
                      android:textAppearance="@style/TextAppearance.AppCompat.Large"/>


            <TextView android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:text="LICENSE NUMBER"
                      android:alpha="0.8"
                      android:fontFamily="@font/ubuntu_medium"
                      android:textAppearance="@style/TextAppearance.AppCompat.Small"/>

            <TextView android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:id="@+id/li"
                      android:text="TT498828AB32"
                      android:alpha="0.8"
                      android:fontFamily="@font/ubuntu_medium"
                      android:padding="8dp"
                      android:textAppearance="@style/TextAppearance.AppCompat.Large"/>


            <TextView android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:text="FIRST ISSUE DATE"
                      android:alpha="0.8"
                      android:fontFamily="@font/ubuntu_medium"
                      android:textAppearance="@style/TextAppearance.AppCompat.Small"/>

            <TextView android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:text="20 Aug, 2010"
                      android:alpha="0.8"
                      android:fontFamily="@font/ubuntu_medium"
                      android:padding="8dp"
                      android:textAppearance="@style/TextAppearance.AppCompat.Large"/>


            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="ACTIVE" android:layout_gravity="start"
                      android:alpha="0.8" android:padding="8dp"
                      android:background="#00FF00"
                      android:fontFamily="@font/ubuntu_medium"
                      android:textAppearance="@style/TextAppearance.AppCompat.Small"/>




        </LinearLayout>

    </android.support.v7.widget.CardView>


</RelativeLayout>
